{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Django in Docker",
      "type": "debugpy",
      "request": "attach",
      "connect": {
        "host": "localhost",
        "port": 5678
      },
      "pathMappings": [
        {
          "localRoot": "${workspaceFolder}/cyoa-game-server",
          "remoteRoot": "/app"
        }
      ],
      "justMyCode": false,
      "django": true,
      "redirectOutput": true
    }
  ]
}
